                                    <columns>
                                        <TableColumn fx:id="tcNombreEmpresa" prefWidth="75.0" text="NOMBRE DE LA EMPRESA" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>
