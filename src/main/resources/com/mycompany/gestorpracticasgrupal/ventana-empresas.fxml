                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button maxWidth="135.0" minWidth="135.0" mnemonicParsing="false" onAction="#btnAñadir" prefWidth="135.0" text="AÑADIR EMPRESA" />
