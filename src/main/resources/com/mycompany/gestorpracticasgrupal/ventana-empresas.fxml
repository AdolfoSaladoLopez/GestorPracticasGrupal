                <HBox alignment="CENTER" spacing="50.0">
                    <children>
                        <VBox alignment="CENTER_LEFT" maxWidth="300.0" minWidth="300.0" prefWidth="300.0">
                            <children>
                                <Label text="INFORMACIÓN DE LA EMPRESA" />
                                <HBox>
                                    <children>
                                        <Label alignment="TOP_LEFT" contentDisplay="TOP" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Nombre de la empresa: " />
                                        <Label fx:id="lblNombreEmpresa" text="Label" />
                                    </children>
                                </HBox>
                                <HBox>
                                    <children>
                                        <Label alignment="TOP_LEFT" contentDisplay="TOP" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Responsable: " />
                                        <Label fx:id="lblResponsable" text="Label" />
                                    </children>
                                </HBox>
                                <HBox>
                                    <children>
                                        <Label alignment="TOP_LEFT" contentDisplay="TOP" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Correo electrónico: " />
                                        <Label fx:id="lblCorreo" text="Label" />
                                    </children>
                                </HBox>
                                <HBox>
                                    <children>
                                        <Label alignment="TOP_LEFT" contentDisplay="TOP" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Teléfono: " />
                                        <Label fx:id="lblTelefono" text="Label" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER">
